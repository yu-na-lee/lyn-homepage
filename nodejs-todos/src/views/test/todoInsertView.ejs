<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/nav.css">
</head>
<body>
    <%- include('../partials/nav', { title: title, user: user }) %>
    <div class="container">
        <h1>Insert a New Todo</h1>
        <form action="/test/todoInsertPost" method="POST" class="add-todo-form">
            <div class="form-group">
                <label for="user_id">User:</label>
                <select name="user_id" id="user_id" required>
                    <% users.forEach(function(user) { %>
                        <option value="<%= user.user_id %>"><%= user.user_name %></option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" placeholder="Todo title..." required>
            </div>
            <div class="form-group">
                <label for="is_completed">Completed:</label>
                <input type="checkbox" name="is_completed" id="is_completed">
            </div>
            <button type="submit">Add Todo</button>
        </form>
        <a href="/test/users" class="back-link">Back to Users List</a>
    </div>
</body>
</html>